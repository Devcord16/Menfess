	<!DOCTYPE html>
	<html>
		
		<head>
			<title>Menfess Yuk!</title>
			<link rel="stylesheet" href="/css/style.css">
			
		</head>
		<body>
			<img id="gambar"
			src="https://lh3.googleusercontent.com/WaUBklf-pAfsxFsxGTcEOK-SA4r6Vq7LM2lwck94TFg3uGIXp3zRuljeHeomUexJXw"
			alt="Its a rubiks cube!" width="150">
			<h1>Menfess!</h1>
			<div class="card">
				<article class="card2">
					<h4 id="oren" type="text" rows="6"readonly="true"
						placeholder="Type Here...">
						Doma
					</h4>
					
					<img src="/images/uploads/first.jpg">
					<h3 type="text" rows="6"readonly="true"
						placeholder="Type Here...">
						Selamat Datang di Menfess! Ungkapin Aja!
					</h3>
				</article>
				<% data.forEach(element=> { %>
					<article class="card2">
							<form action="/update" method="post">
								<input type="number" style="display: none;"
								name="noteId" value="<%= element.noteId %>">
								<article>
									<!--img name="nimg" width="300" height="200" src="/img.jpg"-->
									<h4 id="oren" type="text" rows="6"readonly="true"
									placeholder="Type Here..." name="noteContent"
									value="<%= element.noteName %>">
									<%= element.noteName %>
								</h4>
								<img src="/images/uploads/image-<%= element.noteId%>.jpg">
								<h3 type="text" rows="6"readonly="true"
									placeholder="Type Here..." name="noteContent"
									value="<%= element.noteContent %>">
									<%= element.noteContent %> 
								</h3>
								
								<!--img name="nimg" width="300" height="200" src="/img.jpg"-->
								
								
							</article>
							<br>
						</form>
					</article>
					<% }) %>
				</div>
				<div class="background" id="background">
					<div id="add" class="card4">
						<button onclick="myFunction()"  class="float2" style="padding-left:20px;">X</button>
						<form action="/" method="post" enctype="multipart/form-data" id="popup">
							<input type="number" style="display: none;"
							name="noteId">
							<p>Apa Yang Anda Pikirkan?</p>
							<textarea type="text" rows="6" cols="30"
							placeholder="Tulis Yang Anda Pikirkan!"
							name="noteContent"></textarea>
							<textarea type="text" rows="6" cols="30"
							placeholder="Nama Anda? atau Untuk Siapa?"
							name="noteName"></textarea>
							<br>
						<label for="choose">Pilih Gambar!</label>
						<input type="file" name="image" id="choose"/>
						<br>
						<button type="submit">Confess!</button>
					</form>
				</div>

			</div>
			<form action="/r" method="post" enctype="multipart/form-data" style="align-items: center;">
				<button type="submit" id="reload" class="float2" style="display: none; position:fixed;;opacity: 0.3;">R</button>
			</form>
				
			<footer class="card4">
				<h5 style="color: #D8B9C3;">Â©Created By <strong>M.Fathin Halim</strong></h5>
			</footer>
			
			<button class="float" onclick="myFunction()">+</button>
			
		
	</body>

	<script>
		function myFunction() {
			var x = document.getElementById("background");
			if (x.style.display === "none") {
				x.style.display = "block";
			} else {
				x.style.display = "none";
			}
		}
		let mybutton = document.getElementById("reload");

		// When the user scrolls down 20px from the top of the document, show the button
		window.onscroll = function() {scrollFunction()};

		function scrollFunction() {
		if (document.body.scrollTop > 70 || document.documentElement.scrollTop > 70) {
			mybutton.style.display = "block";
		} else {
			mybutton.style.display = "none";
		}
		}
		function myFunction2() {
			var x = document.getElementById("comment");
			if (x.style.display === "none") {
				x.style.display = "block";
			} else {
				x.style.display = "none";
			}
		}

	</script>
	</html>
