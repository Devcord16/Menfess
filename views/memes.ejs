	<body>
		<article  id="main">
			<div class="card">
				<article class="card2">
					<h4 id="oren" type="text" rows="6"readonly="true"
						placeholder="Type Here...">
						Doma
					</h4>
					
					<img src="/images/uploads/first.jpg">
					<h3 type="text" ro	ws="6"readonly="true"
					placeholder="Type Here...">
					Selamat Datang di Menfess! Ungkapin Aja!
				</h3>
			</article>
			<article id="mainn">
				<% data.forEach(element => { %>
					<article class="card2 reveal" id="hehe">
						<input type="number" style="display: none;" name="noteId" charset="UTF-8" id="noteId" value="<%= element.noteId %>">
						<article>
							<h4 id="oren" type="text" rows="6" readonly="true" placeholder="Type Here..." name="noteContent" value="<%= element.noteName %>">
								<%= element.noteName %>
							</h4>
							
							<img class="image-zoom" name="img" src="/images/uploads/memes/image-<%= element.noteId %>.jpg" oncontextmenu="downloadImage(this);" onError="this.remove();">
							
							<h3 type="text" rows="6" readonly="true" placeholder="Type Here..." name="noteContent" value="<%= element.noteContent %>">
								<%= element.noteContent %> 
							</h3>
							
						</article>

							
								</article>
								<% }) %>
							</article>
						</div>
						<div class="background" id="background">
							<center><div id="add" class="card4">
						<button onclick="myFunction()"  class="float2">X</button>
						<form action="/memes" method="post" enctype="multipart/form-data" id="popup">
							<input type="number" style="display: none;"
							name="noteId">
							<p>Apa Yang Anda Pikirkan?</p>
							<input type="text" rows="6" cols="30"
							placeholder="Tulis Yang Anda Pikirkan!"
							name="noteContent"></input>
							<p>Nama?</p>
							<input type="text" rows="6" cols="30"
							style="margin-top: 20px; margin-bottom: 40px;"
							placeholder="Nama Anda? atau Untuk Siapa?"
							name="noteName"></input>
							<br>
							<label for="choose" id="input" style=" font-size: 2vw;">Pilih Gambar!</label>
						<input type="file" name="image" id="choose" onchange="previewImage(event)"/>
						<br>
						<center><img id="image-preview" style="margin-top: 20px; height: 10vw;width: auto;display: none;"></center>
						<br>
						<button type="submit">Confess!</button>
					</form>
				</div>
          </center>

			</div>
	</article>
